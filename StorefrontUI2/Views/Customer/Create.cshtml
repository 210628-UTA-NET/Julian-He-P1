@model StorefrontUI2.Models.CustomerVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
@* Code to create a customer inputs name, address orders *@
<body>
    <h3>Create a Customer</h3>

     <Div>
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type ="text" class="form-control" placeholder="Put Name Of Customer Here">
                <span asp-validation-for = "Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" type="text" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="text" step="0.01" min="0" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class = "form-label">Phone Number</label>
                <input asp-for="Phone" type ="number" step = "0.01" min = "0" class="form-control">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <a asp-action="Index" class="btn btn-danger" style="position:relative; top:15px; width:100px">Back</a>
    </div> 
</body>
</html>