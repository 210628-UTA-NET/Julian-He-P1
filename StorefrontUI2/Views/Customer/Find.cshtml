@model IEnumerable<StorefrontUI2.Models.CustomerVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title></title>
</head>
<body>
    <h3> Find a Customer</h3>
    <div>
        <p>
            @using(Html.BeginForm("Find","Customer", FormMethod.Get)){
            <b>Search By:</b> 
            @Html.RadioButton("Search by", "Name", true) <text> Name </text>
            @Html.RadioButton("Search by", "Address") <text>Address</text> 
            <br/>
            @Html.TextBox("Search") <input type = "submit" value ="Search" placeholder="Customer Information" />
            }
        </p>
        <table border="1" class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Email</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count()==0){
                <tr>
                    <td colspan="4"> No rows match search criteria</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @Html.ActionLink("ViewInfo", "ViewInfo", new {p_id = item.ID}, new {@style = "color:white", @class="btn btn-secondary"})
                    </td>
                </tr>
            }
        </tbody>
        </table>
        <a asp-action="Index" class="btn btn-danger" style="position:relative; top:15px; width:100px">Back</a>
    </div>
</body>
</html>