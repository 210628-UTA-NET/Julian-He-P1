@model StorefrontUI2.Models.CustomerVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3>@ViewBag.Customer.Name's Information</h3>

    <div>
        
        <table class="table table-striped table-hover">
        <tbody>
            <label>Name: @Model.Name</label> <br>
        <label>Address: @Model.Address</label> <br>
        <label>Email: @Model.Email</label> <br>
        <label>Phone: @Model.Phone</Label> <br>
        </tbody>
    </table>
    @Html.ActionLink("View Orders", "CustomerOrders", "Order", new {p_id = Model.ID}, new {@style = "color:white", @class="btn btn-secondary"}) <br>
    @Html.ActionLink("Place Order", "PlaceOrder", "Order", new {p_id = Model.ID}, new {@class="btn btn-secondary", 
    @style="position:relative; top:15px; width:100px; margin-top:10px; margin-botton:10px"}) 
        <br>
        <a asp-action="Index" asp-controller="Customer" class="btn btn-danger" style="position:relative; top:15px; width:100px; margin-top:10px">Back</a>
    </div>
</body>
</html>