@model IEnumerable<StorefrontUI2.Models.CustomerVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>You are in the Customer Page</h1>

    <a class="btn btn-secondary" asp-action="Create">Create Customer</a>
 <br>

<p>
            @using(Html.BeginForm("Index","Customer", FormMethod.Get)){
            <br/>
            @Html.TextBox("Search") <input type = "submit" value = "Search" placeholder="Customer Name" />
            }
        </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count()==0){
                <tr>
                    <td colspan="4"> No Customers match search criteria</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(mI => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @Html.ActionLink("View Info", "ViewInfo", new {p_id = item.ID}, new {@style = "color:white", @class = "btn btn-secondary"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>