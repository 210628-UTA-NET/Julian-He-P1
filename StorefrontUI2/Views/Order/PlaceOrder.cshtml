@model IEnumerable<StorefrontUI2.Models.StorefrontVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3>Choose Which Store You Wish to Order From</h3>
    <br>
    <p>
            @using(Html.BeginForm("PlaceOrder","Order", FormMethod.Get)){
            <br/>
            @Html.TextBox("Search") <input type = "submit" value = "Search" placeholder="Customer Name" />
            }
        </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(mI => item.Address)</td>
                    <td>
                        @Html.ActionLink("Place Order", "MakeOrder", "Order", new {store_id = item.ID, cust_id = TempData["customer"]}, 
                        new {@style = "color:white", @class = "btn btn-secondary"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Back", "ViewInfo", "Customer", new{p_id = TempData["customer"]},new {@style = "color:white", @class = "btn btn-secondary"} )


</body>
</html>