@model IEnumerable<StorefrontUI2.Models.StorefrontVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>You are in the Storefront Page</h1>

    <a class="btn btn-secondary" asp-action="Create">Create Store</a>

        <p>
            @using(Html.BeginForm("Index","Store", FormMethod.Get)){
            <br/>
            @Html.TextBox("Search") <input type = "submit" value = "Search" placeholder="Store Name" />
            }
        </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count()==0){
                <tr>
                    <td colspan="4"> No Stores match search criteria</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(mI => item.Address)</td>
                    <td>
                        @Html.ActionLink("View Info", "ViewInfo", "Store", new {p_id = item.ID}, new {@style = "color:white", @class = "btn btn-secondary"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>