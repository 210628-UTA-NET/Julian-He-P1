@model IEnumerable<StorefrontUI2.Models.LineItemVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>

<body>
    <h1>Inventory</h1>

    <table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price Per Item
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0){
                <tr>
                    <td colspan="4"> No Items in Inventory</td>
                </tr>
            }
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName.Price)
                </td>
            </tr>
        }
    </tbody>
    </table>
    
</body>
</html>